{
  "name": "typescript-timecode",
  "version": "0.0.1",
  "description": "A typescript timecode converter",
  "homepage": "https://github.com/ijazulrehman/typescript-timecode",
  "keywords": [
    "timecode",
    "utils",
    "time",
    "converter",
    "utility"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ijazulrehman/typescript-timecode.git"
  },
  "bugs": {
    "url": "https://github.com/ijazulrehman/typescript-timecode/issues"
  },
  "author": {
    "name": "Ijaz Ul Rehman",
    "url": "http://ijazulrehman.com",
    "email": "ijazulrehman@outlook.com"
  },
  "license": "ISC",
  "scripts": {
    "compile": "rm -rf dist/lib && tsc && tsc --build tsconfig.es5.json",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": [
      ".*\\.spec\\.ts$",
      ".*\\.e2e-spec\\.ts$"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
